<h1>Sign Up</h1>


<div class="landing-page background-image">
  
  <section id="landing-modal" class="Absolute-Center">
    
    
    <%= form_errors %>
    <form class="sign-up" action="<%= users_url %>" method="post" enctype="multipart/form-data">
      <%= auth_token %>
  
      <label for="user_avatar">Upload Avatar</label>
      <input type="file" id="user_avatar" name="user[avatar]">
  
      <label for="name">Name</label>
      <input
        id="name"
        type="text"
        name="user[name]"
        value="<%= @user.name %>">
    
      <label for="email">Email</label>
      <input
        id="email"
        type="text"
        name="user[email]"
        value="<%= @user.email %>">
    
      <label for="password">Password</label>
      <input
        id="password"
        type="password"
        name="user[password]">
    
    
      <input type="submit" value="Sign Up">
  
    </form>
    
    
    <button class="facebook-login hidden">Facebook</button>
    <button class= "google-login hidden">Google</button>
    
    <a class="back-button" href="<%= landing_url %>">Back</a>
      
  </section>
  
</div>

