<% action = list.persisted? ? list_url : lists_url %>
<% method = list.persisted? ? "put" : "post" %>
<% value = list.persisted? ? "Update List" : "Create List" %>


<form class="list-form" action="<%= action %>" method="post">
  <%= auth_token %>
  
  <input
    type="hidden"
    name="_method"
    value="<%= method %>">
  
  <label for="name">Name</label>
  <input
    id="name"
    type="text"
    name="list[name]"
    value="<%= list.name %>">
    
  <label for="users">Select List Member</label>
  
  <select id="users" name="list[shared_user_ids][]">
    <option value=""></option>
    <% users.each do |user| %>
      <option value="<%= user.id %>"><%= user.name %></option>
    <% end %>
  </select>
    
  <input type="submit" value="<%= value %>">
  
</form>