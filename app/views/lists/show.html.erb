<h2 class=""><%= @list.name %></h2>
<a href="<%= lists_url %>">All Lists</a>


<%= render "/tasks/form", list: @list %>

<ul class="tasks-list">
  <% @tasks.each do |task| %>
    <% next if task.completed %>
    <li class="active-task task group">
      <%= render "/tasks/show", task: task %>
    </li>
  <% end %>
  
  <h5>COMPLETED ITEMS</h5>
  <% @tasks.each do |task| %>
    <% next if !task.completed %>
    <li class="completed-task task group">
      <%= render "/tasks/show", task: task %>
    </li>
  <% end %>
  
</ul>