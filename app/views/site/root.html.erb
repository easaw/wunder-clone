
<div class="app-container group">
  
  <section class="sidebar">  
    <nav id="user-nav">
      <header id="user-info" class="group">
      <% if signed_in? %>

        <% if current_user.avatar.exists? %>
          <img class="avatar" src="<%= current_user.avatar.url %>" >
        <% else %>
          <img class="avatar" src="<%= asset_url('default_avatar.png') %>">
        <% end %>
      
        <% if current_user.guest != true %>
          <span class="user-email"><%= current_user.email %></span>
        <% else %>
          <span class="user-email">Guest</span>
        <% end %>
        
        <%= link_to image_tag("icons/sign-out.png"), session_url, method: "delete", class: "sign-out-button" %>
      
      <% end %>
      </header>
    
    </nav>

    <nav id="lists-index"></nav>
  </section>

  <div id="content-container" class="group">
    <section id="content">
    </section>
    <section id="side-content"></section>
  </div>
  
  <div id="modal-container">
  </div>
  
</div>