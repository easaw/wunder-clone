
<div class="app-container group">
  
  <section class="sidebar">  

    <header class="user-info group">
    <% if signed_in? %>

      <% if current_user.avatar.exists? %>
        <img class="avatar" src="<%= current_user.avatar.url %>" >
      <% else %>
        <img class="avatar" src="<%= asset_url('default_avatar.png') %>">
      <% end %>

      <span class="user-email"><%= current_user.email %></span>

      <%= button_to "Sign Out", session_url, method: "delete", class: "sign-out-button" %>
      
    <% end %>
    </header>

    <nav id="lists-index"></nav>
    
  </section>

  <section class="content"></section>
  
</div>