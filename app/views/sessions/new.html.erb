<div class="landing-page background-image">
  
  <section id="landing-modal" class="Absolute-Center">
    
    <div class="Center-Container">
      <img class="logo" src="<%= asset_url('logo.png') %>">
    
      <%= form_errors %>
      <form class="sign-in" action="<%= session_url %>" method="post">
        <%= auth_token %>
    
        <input
          id="email"
          type="text"
          name="user[email]"
          placeholder="Email">
    
  
        <input
          id="password"
          type="password"
          name="user[password]"
          placeholder="Password">
        
        <input type="submit" value="Sign In">
  
      </form>

      <div class="oauth-buttons">
       <%= link_to "Facebook", "/auth/facebook", id:"facebook-button" %>
       <%= link_to "Google", "/auth/google_oauth2", id:"google-button"%>
      </div>

      
      <a class="back-button" href="<%= landing_url %>">Back</a>
    </div>
      
  </section>
  
</div>